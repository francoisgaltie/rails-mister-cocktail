<div class="container text-center">
  <h1> <%= @cocktail.name %> </h1>
</div>


<div class="container">
  <% @cocktail.doses.each do |dose| %>
     <p> <%= dose.description %> </p>
     <p> <%= dose.ingredient.name %> </p>
     <p><%= link_to "Delete dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></p>
     <hr>
  <% end %>
</div>


<div class="container">
  <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
</div>

