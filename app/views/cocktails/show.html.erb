<div class="container text-center">
  <h1> <%= @cocktail.name %> </h1>
</div>

<div class="container">
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
</div>

<div class="container">
     <ul>
        <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %> of <%= dose.ingredient.name %>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fa fa-trash"> </i>
          <% end %>
        </li>
        <% end %>
     </ul>
</div>

<div class="container">
  <% @cocktail.reviews.each do |review| %>
  <p>
    User review: <%= review.comment %>
  </p>
  <p>
    Rating: <%= review.stars %>
  </p>
  <% end %>
</div>



<div class="container">
  <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
</div>

<hr>

<div class="container">
  <%= link_to 'Add a review', new_cocktail_review_path(@cocktail), :class => "btn btn-success" %>
</div>

<hr>

<div class="container">
  <%= link_to 'Back', cocktails_path, class: "btn btn-primary" %>
</div>
